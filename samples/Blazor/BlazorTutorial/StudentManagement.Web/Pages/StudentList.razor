@page "/students"
@inherits StudentListListBase

<h3>StudentList -选中数量 @SelectedStudentCount</h3>

<input type="checkbox" id="showFooter" @bind="ShowFooter" />
<label for="showFooter">是否显示</label>

@if (Students is null)
{
    <div class="spinner"></div>
}
else
{

    <div class="row">
        @foreach (var student in Students)
        {
            <DisplayStudent OnStudentSelection="StudentSelectionChanged" Student="student" ShowFooter="ShowFooter">
            </DisplayStudent>
        }
    </div>


}